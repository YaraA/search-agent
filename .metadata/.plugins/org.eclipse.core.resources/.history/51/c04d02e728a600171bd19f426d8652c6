import java.util.ArrayList;
import java.util.Random;


public class Grid {
	Cell[][] grid;
	
	public Grid(int m, int n, int pressureAndRocks, int obstacles){
		grid= new Cell[m][n];
		for(int i=0; i<m; i++){
			for(int j=0; j<n; j++){
				grid[i][j]= new Blank(i,j);
			}
		}
		for(int k=0;k<pressureAndRocks; k++){
			Random random = new Random();
			int i,j;
			do{
				i = random.nextInt(m + 1 - 0) + 0;
				j = random.nextInt(m + 1 - 0) + 0;
			}
			while(!(grid[i][j] instanceof Blank));
			grid[i][j]= new Rocks(i,j);
			
			
		}
	}
	
	public boolean canMove(Cell currCell, Operator o){ 
		//checks if cell lies on the edges of the grid
		return false;
		
		
	}
	public static void main (String[]args){
		
		//System.out.println(random.nextInt(5 + 1 - 1) + 1);
		Grid x= new Grid(12,12,3,4);
		
	}


}
